<%- klass = object.class.to_s.underscore %>
<%- if object.send(context).is_a?(Array) %>
  <p>
    <%= label_tag "#{klass}[#{context}][]",
      t(context, :scope => [:activerecord, :attributes, klass]) %>
    <%= file_field_tag "#{klass}[#{context}][]" %>
  </p>
<%- else %>
  <p>
    <%= label_tag "#{klass}[#{context}]",
      t(context, :scope => [:activerecord, :attributes, klass]) %>
    <%= file_field_tag "#{klass}[#{context}]" %>
  </p>
<%- end %>
